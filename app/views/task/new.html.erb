<h2> Create a new task</h2>
<%= form_tag :action => 'create' do %>
    <table>
        <tr>
            <td><label for="task_title">Title</label>:</td>
            <td><%= text_field 'task', 'title' %></td>
        </tr>   
        <tr>
            <td><label for="task_description">Description</label>:</td>
            <td><%= text_area 'task', 'description' %></td>
        </tr>
        <tr>
            <td><label for="task_due_date">Due date</label>:</td>
            <td><%= date_field 'task', 'due_date' %></td>
        </tr>
    </table>
    <%= submit_tag 'Add' %>
<% end %>
<%= link_to 'All taks', {:action => 'list'} %>